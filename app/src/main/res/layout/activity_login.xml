<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tvAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Safety"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="32dp" />

        <!-- Texto de introdução -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create an account"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your email to login for this app"
            android:textSize="13sp"
            android:textColor="@color/help_text"
            android:layout_marginBottom="24dp" />

        <!-- Campo de e-mail -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="email@domain.com"
            android:inputType="textEmailAddress"
            android:textSize="15dp"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="16dp" />

        <!-- Campo de senha -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="15dp"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="20dp" />

        <!-- Botão Login -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:backgroundTint="@color/button_enabled"
            android:textColor="@color/text_white"
            android:layout_marginBottom="12dp" />

        <!-- Divisor "ou" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textSize="13sp"
            android:textColor="@color/help_text"
            android:layout_marginBottom="12dp" />

        <!-- Botão Sign Up -->
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:backgroundTint="@color/button_enabled"
            android:textColor="@color/text_white"
            android:layout_marginBottom="28dp" />

        <!-- Termos e política -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By clicking Login, you agree to our"
            android:textSize="11sp"
            android:textColor="@color/help_text"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms of Service and Privacy Policy"
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="@color/help_text"
            android:gravity="center" />

    </LinearLayout>
</ScrollView>